source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.1'

# Use Postgres as the database for Active Record
gem 'pg'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

## Bootstrap
gem "therubyracer"
gem 'jquery-rails'

## Uploads
gem 'carrierwave'
gem "fog"
gem 'rmagick'

## Development
group :development do
	gem 'pry-debugger'
	gem 'pry-rails'
end

# Use unicorn and nginx as the app server
gem 'unicorn'
gem "nginx"
